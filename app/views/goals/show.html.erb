<% if @goal.privacy == "public" || (@goal.privacy == "private" && @goal.user_id == current_user.id) %>
<h2><%= @goal.title %> <%= @goal.privacy %></h2>
<p><%= @goal.content %></p>
<% end %>

<% if @goal.user_id == current_user.id %>
<p> <%= link_to "Edit Goal", edit_goal_path %> </p>
<p> <%= button_to "Delete Goal", goal_path(@goal), method: :delete %> </p>
<% end %>

Add Comment
<form action="/goals/<%= @goal.id %>/comments" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <textarea name="comment[body]" id="body"></textarea>
  <input type="submit" value="Add Comment">
</form>

<% @comments.each do |comment| %>
<p> <%= comment.body %> by:  </p>
<% end %>
