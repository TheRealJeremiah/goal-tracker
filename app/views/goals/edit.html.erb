<h1>Edit Goal</h1>
<form action="<%= goal_path(@goal) %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="patch">
  <label for="Title">Title: </label>
  <input type="text" name="goal[title]" id="Title" value="<%= @goal.title %>"><br>
  <label>private: <input type="radio" name="goal[privacy]" value="private"></label>
  <label>public: <input type="radio" name="goal[privacy]" value="public"></label>
  <label for="Content">Content: </label>
  <textarea name="goal[content]" id="Content"><%= @goal.content %></textarea><br>
  <input type="submit" value="Update Goal">
</form>
